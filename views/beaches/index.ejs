<% layout('layout/boilerplate') %> 

<div id="map" class="mb-3 mt-3" style = "width: 100%; height: 400px;"></div>

<h1 class="mb-3 mt-3" style="text-align:center;">HERE'S OUR COLLECTION!!</h1>
<form class="text-center  mb-3 ">
    <!-- <input type="text" class="" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"> -->
    <input class=" me-6" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
    
  </form>


  
<% var val  = 0 %> 
<ul>

    <% for(let b of beach){ val++ ;%>
        
        
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(b.images.length > 0){ %> 
                    <img class="img-fluid" alt="" src="<%= b.images[0].url %> " style="width: 100%; height: 100%;">
                    <%}else{  %> 
                        <img class="img-fluid" alt="" src="https://res.cloudinary.com/dxdkgbvly/image/upload/v1632410038/ecgp9i6hnpjynfh9laf2.jpg">
                    <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= b.title %> </h5>
                        <p class="card-text"><%= b.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%= b.location %> </small>
                        </p>

                        <a class="btn btn-primary" href="/beaches/<%=b._id%>">View <%= b.title %> </a>
                    </div>

                </div>
            </div>
        </div>
        
    <% } %> 
        
</ul>

